extends layout

block content
	h1= title
	p Welcome to #{title}
	div#message
	form.tiny-rhinos(method="post", action="")
		div.specificname 
			label Specific Name:
			br
			input(type="text", name="specificname", placeholder="iceball")
		hr
		div.semantic-size 
			p Size:
			mixin radio(name)

				-for(i=0; i<name.length; i++){
					input(type="radio", name="size", value="#{name[i]}")
					label.name= name[i][0].toUpperCase()+name[i].slice(1) 
					br
				-}
			+radio(size)
		hr
		div.weight
			p Weight (lbs.):
			input.range-rover(type="range", min="0", max="80", value="25", step="1")
			br
			span.range 25
		hr
		div.temp
			p Temperature
		hr
		button#signup-form.btn.btn-default(type="submit", value="Submit") Submit
		div#loader


	script(src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js")
	script(src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js")
	script(src="/javascripts/main.js")

